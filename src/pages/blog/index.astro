---
import Layout from "../../components/Layout.astro";
const posts = await Astro.glob("./posts/*md");
---

<Layout
    pageTitle="blog de desarrollo"
    pageDescription="es un tutorial de desarrollo y programacion"
>
    <h1>Blog</h1>
    {
        posts.map((post) => {
            return <a href={post.url} class="link">{post.frontmatter.title}</a>
        })
    }

    <style>
        .link{
            background: wheat;
            color: black;
            text-decoration: none;
            display: block;
            margin-bottom: 4px;
        }
    </style>
    
    
</Layout>
